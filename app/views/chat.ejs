<!-- 
	Página do Chat - Multiroom Chat
	Interface principal do chat em tempo real usando Socket.io
	Permite enviar/receber mensagens e visualizar participantes online
-->
<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Multiroom Chat</title>
		
		<!-- JQUERY - biblioteca para manipulação do DOM -->
		<script src="js/jquery-2.2.1.js"></script>
		
		<!-- Bootstrap - framework CSS para estilização responsiva -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- Arquivo CSS customizado -->
		<link href="css/style.css" rel="stylesheet">
		
		<script type="text/javascript">
		
			/* Script para alternar entre visualização de Chat e Participantes */
			$(document).ready(function(){
				// Botão para exibir área de chat e ocultar lista de participantes
				$("#exibe_chat").click(function(){
					$("#conversa").show();
					$("#participantes").hide();
					ocultaNavbar();
				});
				
				// Botão para exibir lista de participantes e ocultar chat
				$("#exibe_participantes").click(function(){
					$("#participantes").show();
					$("#conversa").hide();
					ocultaNavbar();
				});
			});
			
			/* 
			 * Função para fechar o menu mobile do Bootstrap
			 * Recolhe a navbar em dispositivos móveis após clicar em um item
			 */
			function ocultaNavbar(){
				$("#btn_navbar_toggle").attr("class","navbar-toggle collapsed");
				$("#navbar-collapse-1").attr("class","navbar-collapse collapse");
				$("#btn_navbar_toggle").attr("aria-expanded","false");
				$("#navbar-collapse-1").attr("aria-expanded","false");
			}
		</script>
	</head>

	<body>
	
	
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1" id="btn_navbar_toggle">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Multiroom Chat</a>
				</div>
				
				
				<div class="collapse navbar-collapse" id="navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li>
							<a href="#" id="exibe_chat">Chat</a>
						</li>
						<li>
							<a href="#" id="exibe_participantes">Participantes</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		
		<!-- Container principal do chat -->
		<div class="container">
            <div class="row conversa" id="conversa">
				<div class="col-md-1"></div>
				<div class="col-md-10" id="dialogos">
					
				</div>
				<div class="col-md-1"></div>
                
            </div>
			
			<!-- Área de participantes, inicialmente oculta -->
			<div class="row participantes" id="participantes" style="display:none">
				<div class="col-md-1"></div>
				<div class="col-md-10" id="pessoas">
					
				</div>
				<div class="col-md-1"></div>
            </div>
        </div>
		<!-- Área fixa de envio de mensagens na parte inferior da tela -->
		<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
			<div class="container">
				<div class="panel-body campo-mensagem">
					<div class="col-md-12">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Mensagem">
						<span class="input-group-btn">
							<button class="btn btn-default" type="button" id="enviar_mensagem">></button>
						</span>
					</div>
					</div>
				</div>
			</div>
		</nav>		
		
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script>
			var socket = io('http://localhost:8080');
			
			// Notificação quando alguém entra no chat
			socket.on('msgParaCliente', function(data){
				var html = '';
				html += '<div class="alert alert-success" role="alert">';
				html += '	<strong>' + data.apelido + '</strong> ';
				html += '	<p>' + data.mensagem + '</p>';
				html += '</div>';
				
				$("#dialogos").append(html);
				window.scrollTo(0,document.body.scrollHeight);
			});

			socket.emit('registrarApelido', {apelido: '<%= apelido %>'});
			
			// Enviar mensagem
			$("#enviar_mensagem").click(function(){
				socket.emit('msgParaServidor', 
					{ apelido: '<%= apelido %>', mensagem: $('.campo-mensagem input').val() }
				);
				$('.campo-mensagem input').val('');
			});

			// Notificação quando alguém sai do chat
			socket.on('usuarioSaiu', function(data){
				var html = '';
				html += '<div class="alert alert-warning" role="alert">';
				html += '	<strong>' + data.apelido + '</strong> saiu do chat';
				html += '</div>';
				
				$("#dialogos").append(html);
			});

			// atualiza participantes
			socket.on('atualizaParticipantes', function(data){
				// Limpa a lista atual
    			$('#pessoas').html('');
				// Adiciona cada participante
    			data.participantes.forEach(function(apelido){
					var html = '';
					html += '<img src="images/ico_usuario.png" />';
					html += '<span class="participante">';
						html += apelido;
					html += '</span>';
					
					$("#pessoas").append(html);
				});
			});
		</script>
	</body>
</html>